<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <com.admobads.loading.skeleton.layout.SkeletonConstraintLayout
        android:id="@+id/skeletonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_2sdp"
        app:clipToText="false"
        app:customDuration="1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmerBlurWidth="20dp"
        app:shimmerStrokeWidth="100dp"
        app:skeletonColor="#DFDEE4">

        <ImageView
            android:id="@+id/img001"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/text001"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img001"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_toEndOf="@+id/img001"
            android:layout_toRightOf="@+id/img001"
            android:lines="1" />

        <TextView
            android:id="@+id/textlay"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img001"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/img001"
            android:layout_toRightOf="@+id/img001"
            android:lines="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cta"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="#00ffffff"
            android:lines="1"
            android:textSize="@dimen/_10sdp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </com.admobads.loading.skeleton.layout.SkeletonConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>